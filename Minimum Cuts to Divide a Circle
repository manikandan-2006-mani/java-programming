import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner se=new Scanner(System.in);
        int a=se.nextInt();
        if(a>=1&& a<=100){
             if(a==1){
                System.out.println(0);}
              else if(a%2==0){
             System.out.println(a/2);}
             else{
                 System.out.println(a);
             }
            
        }
    }
}
