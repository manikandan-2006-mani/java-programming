import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner se=new Scanner(System.in);
        String a=se.nextLine();
        int count=0;
        for(int i=0;i<a.length();i++){
              char c=a.charAt(i);
               if(c>='A' && c<='Z'){
                          count++;}}
       System.out.println(count);
    }
}
